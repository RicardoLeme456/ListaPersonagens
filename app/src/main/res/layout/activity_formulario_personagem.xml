<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.FormularioPersonagemActivity">

    <EditText
        android:id="@+id/editText_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome" />

    <EditText
        android:id="@+id/editText_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Data de Nacimento" />

    <EditText
        android:id="@+id/editText_nascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Descrição"
        android:textAlignment="viewStart"
        android:gravity="start" />

    <Button
        android:id="@+id/button_salvar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Send"
        android:translationX="700px" />
</LinearLayout>